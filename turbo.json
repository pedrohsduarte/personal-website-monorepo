{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_GTM_ID"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_GTM_ID"]
    },
    "type-check": {
      "outputs": []
    },
    "lint": {},
    "code-format": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_GTM_ID"]
    },
    "dev:docker": {
      "cache": false,
      "persistent": true
    }
  }
}
